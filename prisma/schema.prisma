generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Register {
  id     Int      @id @default(autoincrement())
  name   String
  points Int   
  mode   String
  date   DateTime @default(now()) // <-- salva data automaticamente
  avatar String @default("/avatars/default.png")
}

